<%
    def link_to(name, url)
      "<a href='#{url}'>#{name}</a>"
    end
%>
<html>
  <body>
    <h1>You're using a layout</h1>
    <p>
      <h3> I'm a header</h3>
      <p>Put things in the header</p>
      <a href='me.html'>Me</a>
      <a href="http://google.com">Google</a>
      <a href="http://yandex.ru">Yandex</a>
      <a href="http://youtube.com">Youtube</a>
    </p>
    <hr />
    <div>
      <%= yield %>
    </div>
    <hr />
    <div>
      <h3> I'm a footer</h3>
      <p>Put things in the footer</p>
      <ul>
        <li><%= link_to('twitter', 'http://twitter.com') %></li>
      </ul>
    </div>
  </body>
</html>
